@model Interview_Tracker.Controllers.Interview

@{
    ViewBag.Title = "Details";
}
<link rel="stylesheet" href="~/App_Themes/Theme1/StyleSheet.css" type="text/css" />
<link rel="stylesheet" href="~/App_Themes/Theme1/bootstrap.css" type="text/css" />

<body>
    <div>
        <div class="p-3 bg-info text-white text-center">
            <h1>Interview Tracker</h1>
        </div>

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Candidate")">Candidate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="@Url.Action("Index", "Job")">Job</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Interview")">Interview</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>


    <div class="container mt-5">
        <fieldset>
            <legend class="container ">Interview Details</legend>
            <div class="container m-5 m-lg-5 m-sm-5">
                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Candidate.FirstName)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Candidate.FirstName)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Job.PositionTitle)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Job.PositionTitle)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.InterviewDate)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.InterviewDate)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.InterviewType)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.InterviewType)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.InterviewerName)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.InterviewerName)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.InterviewStatus)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.InterviewStatus)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.FollowUpActions)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.FollowUpActions)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.ThankYouNoteSent)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.ThankYouNoteSent)
                </div>

                <div class="display-label">
                    @Html.DisplayNameFor(model => model.Notes)
                </div>
                <div class="display-field">
                    @Html.DisplayFor(model => model.Notes)
                </div>
                </div>
</fieldset>
        <p class="container ">
            @Html.ActionLink("Edit", "Edit", new { id = Model.InterviewId }, new { @class = "btn btn-secondary btn-sm" }) |
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-info btn-sm" })
        </p>
  
    </div>
</body>