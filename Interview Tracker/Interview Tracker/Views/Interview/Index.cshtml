@model IEnumerable<Interview_Tracker.Controllers.Interview>

@{
    ViewBag.Title = "Index";
}
<link rel="stylesheet" href="~/App_Themes/Theme1/StyleSheet.css" type="text/css" />
<link rel="stylesheet" href="~/App_Themes/Theme1/bootstrap.css" type="text/css" />

<body>
    <div>
        <div class="p-3 bg-info text-white text-center">
            <h1>Interview Tracker</h1>
        </div>

        <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Candidate")">Candidate</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Job")">Job</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" href="@Url.Action("Index", "Interview")">Interview</a>
                    </li>
                   
                </ul>
            </div>
        </nav>
    </div>

       
    <div class="table-responsive">
        <p class="nav-item p-3">
            @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-primary btn-sm" })
        </p>
        <table class="table shadow  container table-responsive">
            <thead>
                <tr class="table-warning">
                    <th>
                        @Html.DisplayNameFor(model => model.Candidate.FirstName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Job.PositionTitle)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterviewDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterviewType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterviewerName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InterviewStatus)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FollowUpActions)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ThankYouNoteSent)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Notes)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Candidate.FirstName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Job.PositionTitle)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterviewDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterviewType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterviewerName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.InterviewStatus)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FollowUpActions)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ThankYouNoteSent)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Notes)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.InterviewId }, new { @class = "btn btn-outline-secondary btn-sm" })
                            @Html.ActionLink("Details", "Details", new { id = item.InterviewId }, new { @class = "btn btn-outline-info btn-sm" })
                            @Html.ActionLink("Delete", "Delete", new { id = item.InterviewId }, new { @class = "btn btn-outline-danger btn-sm" })
                        </td>
                    </tr>
                }

        </table>

    </div>

        
  </body>
